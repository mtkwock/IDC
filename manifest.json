{
  "name": "Valeria's Combat Trainer",
  "version": "0.2",
  "description": "Hijack Ilmina's library for training purposes.",
  "manifest_version": 2,
  "permissions": ["activeTab", "tabs", "<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://ilmina.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "injector.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "leaders.js",
    "ilmina_extension.js"
  ]
}